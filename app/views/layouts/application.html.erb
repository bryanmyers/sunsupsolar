        <li>                <%= link_to 'Residential', '#' %>       </li>
        <li>                <%= link_to 'Commercial', '#' %>        </li>
        <li>                <%= link_to 'About Us', '#' %>          </li>
        <li>                <%= link_to 'News', '#' %>              </li>
      </ul>
  </div><!-- /.navbar-collapse -->
</nav>
<div class="container" id="main_container">
